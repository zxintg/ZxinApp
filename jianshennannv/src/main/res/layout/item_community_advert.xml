<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_ad"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <View
        android:layout_width="wrap_content"
        android:layout_height="8.0dip"
        android:background="@color/activity_background" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:src="@mipmap/default_iamge" />

            <TextView
                android:id="@+id/ad_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_toRightOf="@+id/iv_icon"
                android:textColor="#ff434343" />

            <TextView
                android:id="@+id/tv_desc_ad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ad_tv_name"
                android:layout_marginLeft="12.0dip"
                android:layout_toRightOf="@+id/iv_icon"
                android:ellipsize="end"
                android:lines="1" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_desc"
            android:layout_width="fill_parent"
            android:layout_height="125.0dip"
            android:layout_marginTop="10.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/base_article_bigimage" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="52.0dip"
            android:paddingBottom="8.0dip"
            android:paddingTop="8.0dip">

            <TextView
                android:id="@+id/tv_count_ad"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="70.0dip"
                android:layout_height="36.0dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_blue_shape"
                android:gravity="center"
                android:text="安装"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>