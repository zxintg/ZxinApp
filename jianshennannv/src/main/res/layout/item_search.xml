<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_search_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_iamge" />

        <TextView
            android:id="@+id/tv_search_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="#55000000"
            android:gravity="right"
            android:padding="10dp"
            android:textColor="@color/color_ffffff"
            android:textSize="13sp"
            tools:text="X张" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_search_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:padding="10dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_15sp"
        tools:text="描述" />

    <TextView
        android:id="@+id/tv_search_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_12sp"
        tools:text="时间" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_search_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_13sp"
            tools:text="名称" />

        <TextView
            android:id="@+id/tv_search_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_13sp"
            tools:text="已播放XX次" />

    </LinearLayout>
</LinearLayout>