<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.root.view.CommonCrosswiseBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_black_left_arrow"
        app:show_left_button="true"
        app:title_text="自定义线程池"
        app:title_textColor="@color/color_333333"
        app:title_textSize="@dimen/size_18px" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_setting_tv0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:bar_background="@color/color_ffffff"
        app:left_button_text="0.线程池：ThreadPoolExecutor，用于测试"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_setting_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:bar_background="@color/color_ffffff"
        app:left_button_text="1.最简单的runnable线程调用方式"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_setting_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:bar_background="@color/color_ffffff"
        app:left_button_text="2.最简单的异步回调"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_setting_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:bar_background="@color/color_ffffff"
        app:left_button_text="3.延迟时间执行任务"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px" />
</LinearLayout>