<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mine_bg"
    android:orientation="vertical"
    android:tag="layout/activity_mine_0">

    <include
        android:id="@+id/mine_banner"
        layout="@layout/banner_common" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/detail_division_color" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/mine_refresh"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/detail_bg_gray_e5e5e5"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="139.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mine_icon"
                    android:layout_width="85.0dip"
                    android:layout_height="85.0dip"
                    android:layout_marginLeft="31.0dip"
                    android:background="@mipmap/me_touxiangk"
                    android:padding="2.0dip"
                    android:src="@mipmap/headportrait" />

                <TextView
                    android:id="@+id/mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.5dip"
                    android:text="- -"
                    android:textColor="@color/color_333333"
                    android:textSize="15.0sp" />

                <ImageView
                    android:id="@+id/mine_vip_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.0dip"
                    android:src="@mipmap/me_vip"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="14.0dip" />

            <RelativeLayout
                android:id="@+id/mine_setting_name_rl"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12.5dip"
                    android:text="@string/mine_setting_name"
                    android:textColor="@color/mine_text_color"
                    android:textSize="15.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dip"
                    android:src="@mipmap/arrow_r_b" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/detail_division_color" />

            <RelativeLayout
                android:id="@+id/mine_be_vip_rl"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12.5dip"
                    android:text="@string/mine_be_vip"
                    android:textColor="@color/mine_text_color"
                    android:textSize="15.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dip"
                    android:src="@mipmap/arrow_r_b" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="14.0dip" />

            <TextView
                android:id="@+id/mine_sign_out_tv"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/mine_sign_out"
                android:textColor="@color/common_bright"
                android:textSize="15.0sp" />
        </LinearLayout>
   </android.support.v4.widget.NestedScrollView>
</LinearLayout>