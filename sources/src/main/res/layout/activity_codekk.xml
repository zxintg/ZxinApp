<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_codekk_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_black_left_arrow"
        app:show_left_button="true"
        app:title_text="Android开源项目集"
        app:title_textColor="@color/color_333333"
        app:title_textSize="@dimen/size_18px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zxin.root.view.PagerSlidingTabStrip
            android:id="@+id/pst_codekk_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_14sp"
            app:pstsDividerColor="@color/color_00000000"
            app:pstsIndicatorColor="@color/color_ffae12"
            app:pstsIndicatorHeight="2dp"
            app:pstsSelectTabTextColor="@color/color_ffae12"
            app:pstsSelectTabTextSize="@dimen/size_16sp"
            app:pstsTabBackground="@color/color_ffffff"
            app:pstsTextAllCaps="false"
            app:pstsUnderlineColor="@color/line_color"
            app:pstsUnderlineHeight="0.5dp" />

        <View
            style="@style/line_ver_style"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_codekk_edittitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:text="更多"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>

    <!--可滑动的布局内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_codekk_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>