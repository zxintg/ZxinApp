<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:background="#fff5f5f5" android:layout_width="@dimen/pgc_item_logo_width" android:layout_height="@dimen/pgc_item_logo_width" android:layout_margin="@dimen/pgc_item_logo_padding">
        <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/avatar_default" android:scaleType="centerCrop" />
        <ImageView android:id="@id/person_item_same_avatar_img" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
        <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/detail_rukoumengceng" />
    </FrameLayout>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:paddingLeft="@dimen/persondirect_item_top_layout_marginleftright" android:paddingRight="@dimen/pgc_item_logo_width" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@id/person_item_same_titlefirst_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/txt_searchdirect_first_title" />
            <TextView android:layout_gravity="bottom" android:id="@id/person_item_same_rename_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/persondirect_item_top_titlesecond_txt_margintop" style="@style/txt_searchdirect_second" />
        </LinearLayout>
        <TextView android:id="@id/person_item_same_titlesecond_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/persondirect_item_top_titlesecond_txt_margintop" style="@style/txt_searchdirect_second" />
    </LinearLayout>
    <View android:id="@id/item_line" android:background="@color/persondirect_item_line_color" android:layout_width="1.0px" android:layout_height="fill_parent" />
</LinearLayout>