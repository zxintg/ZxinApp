            <com.youku.phone.channel.view.HorizontalScrollForeverRecyclerView android:id="@id/home_card_topic_recommend_list" android:layout_width="fill_parent" android:layout_height="@dimen/home_card_topic_recommend_content_height_land" android:layout_marginBottom="@dimen/home_card_topic_recommend_content_bottom_margin" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>