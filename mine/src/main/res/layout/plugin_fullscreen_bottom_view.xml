<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/plugin_fullscreen_bottom_view_bg" android:layout_width="fill_parent" android:layout_height="@dimen/plugin_fullscreen_bottom_view_bg_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@id/plugin_fullscreen_seekbar_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
            <SeekBar android:id="@id/plugin_fullscreen_seekbar" android:layout_width="fill_parent" android:layout_height="wrap_content" android:progressDrawable="@drawable/player_fullscreen_plugin_progressbar" android:thumb="@drawable/plugin_fullscreen_seekbar_thumb" />
            <com.youku.detail.view.HotPointView android:id="@id/plugin_fullscreen_hotpoint_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignTop="@id/plugin_fullscreen_seekbar" android:layout_alignBottom="@id/plugin_fullscreen_seekbar" />
            <com.youku.detail.view.InteractPointView android:id="@id/plugin_fullscreen_interactpoint_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignTop="@id/plugin_fullscreen_seekbar" android:layout_alignBottom="@id/plugin_fullscreen_seekbar" />
        </RelativeLayout>
        <RelativeLayout android:gravity="top" android:id="@id/plugin_fullscreen_bottom_layout" android:paddingRight="@dimen/plugin_fullscreen_bottom_layout_paddingright" android:layout_width="fill_parent" android:layout_height="@dimen/plugin_fullscreen_bottom_layout_height" android:layout_below="@id/plugin_fullscreen_seekbar_layout">
            <ImageView android:id="@id/plugin_fullscreen_play_control_btn" android:layout_width="@dimen/plugin_fullscreen_play_control_btn_width" android:layout_height="fill_parent" android:src="@drawable/plugin_fullscreen_play_control_play" android:layout_alignParentLeft="true" />
            <ImageView android:id="@id/plugin_fullscreen_play_next_btn" android:layout_width="@dimen/plugin_fullscreen_play_next_btn_width" android:layout_height="fill_parent" android:src="@drawable/plugin_fullscreen_play_next" android:layout_toRightOf="@id/plugin_fullscreen_play_control_btn" />
            <RelativeLayout android:id="@id/plugin_fullscreen_time_layout" android:layout_width="wrap_content" android:layout_height="@dimen/plugin_fullscreen_time_height" android:layout_toRightOf="@id/plugin_fullscreen_play_next_btn">
                <TextView android:id="@id/plugin_fullscreen_time_left" android:paddingLeft="@dimen/plugin_fullscreen_time_paddingleftright" android:paddingRight="@dimen/plugin_fullscreen_time_paddingleftorright" android:layout_width="@dimen/plugin_fullscreen_time_width" android:layout_height="@dimen/plugin_fullscreen_time_height" android:text="00:00" style="@style/plugin_fullscreen_time_left" />
                <TextView android:id="@id/plugin_fullscreen_time_middle" android:layout_width="@dimen/plugin_fullscreen_time_middle_width" android:layout_height="@dimen/plugin_fullscreen_time_height" android:text="/" android:layout_toRightOf="@id/plugin_fullscreen_time_left" style="@style/plugin_fullscreen_time_right" />
                <TextView android:id="@id/plugin_fullscreen_time_right" android:paddingLeft="@dimen/plugin_fullscreen_time_paddingleftorright" android:paddingRight="@dimen/plugin_fullscreen_time_paddingleftright" android:layout_width="@dimen/plugin_fullscreen_time_width" android:layout_height="@dimen/plugin_fullscreen_time_height" android:text="00:00" android:layout_toRightOf="@id/plugin_fullscreen_time_middle" style="@style/plugin_fullscreen_time_right" />
            </RelativeLayout>
            <ImageView android:id="@id/plugin_fullscreen_small_btn" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:src="@drawable/plugin_fullscreen_small_btn" android:layout_alignParentRight="true" />
            <ImageView android:id="@id/plugin_fullscreen_bottom_rotate_btn" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:src="@drawable/plugin_fullscreen_bottom_rotate_btn" android:layout_toLeftOf="@id/plugin_fullscreen_small_btn" android:layout_alignWithParentIfMissing="true" />
            <LinearLayout android:gravity="center" android:id="@id/plugin_fullscreen_bottom_right_line_layout" android:layout_width="@dimen/plugin_fullscreen_bottom_line_layout_width" android:layout_height="@dimen/plugin_fullscreen_time_height" android:layout_toLeftOf="@id/plugin_fullscreen_bottom_rotate_btn" android:layout_alignWithParentIfMissing="true">
                <View android:background="#80a4a4a4" android:layout_width="1.0px" android:layout_height="fill_parent" />
            </LinearLayout>
            <ImageView android:id="@id/plugin_danmu_btn" android:visibility="gone" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:layout_marginRight="@dimen/plugin_fullscreen_dress_plus_margin_left" android:src="@drawable/fullscreen_bottom_danmu_btn_selector" android:layout_toLeftOf="@id/plugin_fullscreen_bottom_btn_dress" android:layout_alignWithParentIfMissing="true" />
            <ImageView android:id="@id/plugin_danmu_word" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:layout_marginRight="@dimen/plugin_top_time_txt_marginright" android:src="@drawable/fullscreen_bottom_danmu_word_selector" android:layout_toLeftOf="@id/plugin_danmu_btn" android:layout_alignWithParentIfMissing="true" />
            <ImageView android:id="@id/plugin_lock_play_btn" android:visibility="gone" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:layout_marginRight="@dimen/plugin_fullscreen_dress_plus_margin_left" android:src="@drawable/fullscreen_bottom_lockplay_btn_selector" android:layout_toLeftOf="@id/plugin_fullscreen_bottom_right_line_layout" android:layout_alignWithParentIfMissing="true" />
            <ImageView android:id="@id/plugin_fullscreen_bottom_keyboard_btn" android:visibility="gone" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:src="@drawable/plugin_fullscreen_bottom_keyboard_btn" android:layout_toLeftOf="@id/plugin_danmu_word" android:layout_alignWithParentIfMissing="true" />
            <ImageView android:id="@id/plugin_fullscreen_bottom_barrage_btn" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:src="@drawable/plugin_fullscreen_bottom_barrage_btn" android:layout_toLeftOf="@id/plugin_fullscreen_bottom_keyboard_btn" android:layout_alignWithParentIfMissing="true" />
            <ImageView android:id="@id/plugin_fullscreen_bottom_btn_vr" android:padding="@dimen/plugin_fullscreen_dress_plus_padding" android:visibility="gone" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:layout_marginBottom="@dimen/plugin_fullscreen_dress_plus_margin_bottom" android:src="@drawable/vr" android:layout_toLeftOf="@id/plugin_lock_play_btn" android:layout_alignWithParentIfMissing="true" />
            <ImageView android:id="@id/plugin_fullscreen_bottom_btn_dress" android:padding="@dimen/plugin_fullscreen_dress_plus_padding" android:visibility="gone" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:layout_marginRight="@dimen/plugin_top_time_txt_marginright" android:layout_marginBottom="@dimen/plugin_fullscreen_dress_plus_margin_bottom" android:src="@drawable/fullscreen_bottom_dress_plus_selector" android:layout_toLeftOf="@id/plugin_fullscreen_bottom_btn_vr" android:layout_alignWithParentIfMissing="true" />
            <LinearLayout android:gravity="center" android:id="@id/plugin_fullscreen_bottom_left_line_layout" android:layout_width="@dimen/plugin_fullscreen_bottom_line_layout_width" android:layout_height="@dimen/plugin_fullscreen_time_height" android:layout_toLeftOf="@id/plugin_fullscreen_bottom_barrage_btn" android:layout_alignWithParentIfMissing="true">
                <View android:background="#80a4a4a4" android:layout_width="1.0px" android:layout_height="fill_parent" />
            </LinearLayout>
            <ImageView android:id="@id/plugin_fullscreen_bottom_loop_btn" android:layout_width="@dimen/plugin_fullscreen_bottom_btn_width" android:layout_height="fill_parent" android:src="@drawable/plugin_fullscreen_bottom_loop_btn" android:layout_toLeftOf="@id/plugin_fullscreen_bottom_left_line_layout" android:layout_alignWithParentIfMissing="true" />
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/plugin_fullscreen_bottom_live_line" android:paddingLeft="@dimen/plugin_fullscreen_bottom_layout_paddingright" android:paddingRight="@dimen/plugin_fullscreen_bottom_layout_paddingright" android:paddingBottom="@dimen/plugin_fullscreen_bottom_live_line_paddingbottom" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_above="@id/plugin_fullscreen_bottom_layout">
            <View android:background="#80a4a4a4" android:layout_width="fill_parent" android:layout_height="1.0px" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>