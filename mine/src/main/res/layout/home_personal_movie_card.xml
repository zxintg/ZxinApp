<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.youku.player.base.YoukuPlayerView android:id="@id/full_holder" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <FrameLayout android:id="@id/home_personal_movie_play_layout" android:background="#fff5f5f5" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <com.youku.widget.YoukuImageView android:id="@id/home_personal_movie_cover" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" />
            <View android:background="#4c000000" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            <TextView android:textSize="@dimen/home_personal_movie_font_30px" android:textColor="#ffffffff" android:ellipsize="end" android:layout_gravity="center|left|top" android:id="@id/home_personal_movie_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/home_personal_movie_20px" android:layout_marginTop="@dimen/home_personal_movie_16px" android:layout_marginRight="@dimen/home_personal_movie_20px" android:lines="2" />
            <ImageView android:layout_gravity="center" android:id="@id/home_personal_movie_play_icon" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/home_personal_movie_card_play" />
            <TextView android:textSize="@dimen/home_personal_movie_font_20px" android:textColor="#ffffffff" android:layout_gravity="bottom|center|right" android:id="@id/home_personal_movie_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/home_personal_movie_20px" android:layout_marginBottom="@dimen/home_personal_movie_20px" />
        </FrameLayout>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/home_personal_movie_100px">
            <FrameLayout android:id="@id/home_personal_movie_avatar_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/home_personal_movie_20px" android:layout_marginTop="@dimen/home_personal_movie_24px">
                <com.youku.phone.collection.widget.DonutCircleImageView android:id="@id/home_personal_movie_avatar" android:layout_width="@dimen/home_personal_movie_50px" android:layout_height="@dimen/home_personal_movie_50px" />
                <ImageView android:layout_gravity="bottom|center|right" android:id="@id/home_personal_movie_avatar_badge" android:paddingLeft="@dimen/home_personal_movie_34px" android:paddingTop="@dimen/home_personal_movie_36px" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/home_personal_movie_card_user_badge" android:scaleType="fitXY" />
            </FrameLayout>
            <TextView android:textSize="@dimen/home_personal_movie_font_26px" android:textColor="#ff333333" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@id/home_personal_movie_card_user_name" android:layout_width="wrap_content" android:layout_height="@dimen/home_personal_movie_40px" android:layout_marginLeft="@dimen/home_personal_movie_14px" android:maxEms="10" android:singleLine="true" />
            <RelativeLayout android:layout_gravity="center|right" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <FrameLayout android:id="@id/home_personal_movie_more_layout" android:padding="@dimen/home_personal_movie_10px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                    <ImageView android:layout_gravity="center" android:paddingRight="@dimen/home_personal_movie_6px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/actionbar_more_selector" /> "
</FrameLayout>
                <FrameLayout android:id="@id/home_personal_movie_comment_layout" android:layout_width="@dimen/home_personal_movie_100px" android:layout_height="wrap_content" android:layout_toLeftOf="@id/home_personal_movie_more_layout" android:layout_centerVertical="true">
                    <ImageView android:layout_gravity="center" android:id="@id/home_personal_movie_comment_img" android:layout_width="@dimen/home_personal_movie_50px" android:layout_height="@dimen/home_personal_movie_50px" android:src="@drawable/detail_card_title_bar_no_comment" />
                    <TextView android:textSize="@dimen/home_personal_movie_font_18px" android:textColor="@drawable/home_personal_movie_comment_color_selector" android:layout_gravity="center" android:id="@id/home_personal_movie_comment_text" android:layout_width="@dimen/home_personal_movie_50px" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/home_personal_movie_35px" android:layout_marginTop="@dimen/home_personal_movie_8px" android:text="1893" android:singleLine="true" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/home_personal_movie_tags_layout" android:paddingLeft="@dimen/home_personal_movie_20px" android:paddingBottom="@dimen/home_personal_movie_10px" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>