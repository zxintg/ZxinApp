<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="@dimen/dimenLiveMenuViewHeight" android:layout_weight="1.0">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <View android:background="@color/colorTransparent" android:layout_width="@dimen/dimenLiveMenuViewItemsLeft" android:layout_height="fill_parent" />
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <android.support.v7.widget.RecyclerView android:id="@id/view_menuview_recyclerview" android:background="@color/colorLiveMenuViewBackground" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent">
            <include layout="@layout/live_stream_caption" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>