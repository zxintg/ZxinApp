                <TextView android:textSize="@dimen/homepage_item_middle_stripe" android:ellipsize="end" android:gravity="center|left" android:id="@id/favorite_page_video_item_stripe_middle" android:background="@drawable/waist_seal" android:paddingLeft="@dimen/waist_seal_line_marginLeft" android:paddingRight="@dimen/waist_seal_line_marginLeft" android:layout_width="fill_parent" android:layout_height="@dimen/grid_item_stripe_middle_height" android:singleLine="true" style="@style/waist_seal_title_style" />
            </LinearLayout>
            <RelativeLayout android:id="@id/favorite_page_video_item_image_delete_bg" android:background="#66000000" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
