    </RelativeLayout>
    <ImageView android:id="@id/plugin_loading_fullscreen_btn" android:layout_width="@dimen/plugin_small_play_control_btn_width" android:layout_height="@dimen/plugin_small_play_control_btn_width" android:src="@drawable/plugin_small_fullscreen_btn" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
