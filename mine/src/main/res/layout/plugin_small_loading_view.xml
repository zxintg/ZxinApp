        <TextView android:textSize="@dimen/player_vip_abnormal_small_error_text_size_youku" android:textColor="@color/yp_vip_abnormal_alpha_60_white" android:layout_gravity="center_horizontal" android:id="@id/plugin_small_prevent_share_error_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/player_vip_abnormal_small_error_text_margin_bottom_youku" android:text="" />
        <Button android:textSize="@dimen/player_vip_abnormal_small_error_button_text_size_youku" android:textColor="@color/yp_vip_abnormal_button_text_color" android:id="@id/plugin_small_prevent_share_button" android:background="@drawable/yp_vip_abnormalerrorpage_button" android:visibility="gone" android:layout_width="@dimen/player_vip_abnormal_fullscreen_error_button_width_youku" android:layout_height="@dimen/player_vip_abnormal_fullscreen_error_button_height_youku" android:text="@string/player_vip_abnormal_error_button_text" />
    </LinearLayout>
    <RelativeLayout android:id="@id/plugin_small_3g_tip" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@id/plugin_loading_operator_ad_logo" android:visibility="gone" android:layout_width="@dimen/operator_logo_width" android:layout_height="@dimen/operator_logo_height" android:layout_marginBottom="@dimen/operator_logo_margin_bottom" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" />
        <TextView android:textSize="@dimen/plugin_small_3g_text_size" android:textColor="@color/alpha_60_white" android:id="@id/plugin_3g_tip_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/plugin_3g_tip_btn_save" android:layout_below="@id/plugin_loading_operator_ad_logo" android:layout_centerHorizontal="true" />
        <TextView android:textSize="@dimen/plugin_small_3g_text_size" android:textColor="@color/alpha_60_white" android:id="@id/plugin_3g_tip_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/plugin_small_3g_tip_text_bottom_margin_bottom" android:text="@string/plugin_3g_tip_btn_save" android:layout_below="@id/plugin_3g_tip_top" android:layout_centerHorizontal="true" />
        <View android:id="@id/plugin_3g_tip_fill" android:visibility="invisible" android:layout_width="@dimen/plugin_small_3g_tip_button_margin" android:layout_height="@dimen/plugin_3g_tip_button_height" android:layout_marginTop="@dimen/plugin_small_3g_tip_text_margin_bottom" android:layout_below="@id/plugin_3g_tip_bottom" android:layout_centerHorizontal="true" />
        <Button android:textSize="@dimen/plugin_small_3g_text_size" android:textColor="#ff2fb3ff" android:id="@id/plugin_3g_tip_btn_origin" android:background="@drawable/plugin_3g_tip_btn_with_stroke" android:layout_width="@dimen/plugin_3g_tip_button_width_big" android:layout_height="@dimen/plugin_3g_tip_button_height" android:layout_marginTop="@dimen/plugin_small_3g_tip_text_margin_bottom" android:text="@string/plugin_3g_tip_btn_origin" android:layout_toLeftOf="@id/plugin_3g_tip_fill" android:layout_below="@id/plugin_3g_tip_bottom" />
        <Button android:textSize="@dimen/plugin_small_3g_text_size" android:textColor="@color/white" android:id="@id/plugin_3g_tip_btn_save" android:background="@drawable/player_subscribe_btn" android:layout_width="@dimen/plugin_3g_tip_button_width" android:layout_height="@dimen/plugin_3g_tip_button_height" android:layout_marginTop="@dimen/plugin_small_3g_tip_text_margin_bottom" android:text="@string/plugin_3g_tip_btn_save" android:layout_toRightOf="@id/plugin_3g_tip_fill" android:layout_below="@id/plugin_3g_tip_bottom" />
        <Button android:textSize="@dimen/plugin_small_3g_text_size" android:textColor="#ff2fb3ff" android:id="@id/plugin_3g_tip_btn_continue" android:background="@drawable/plugin_3g_tip_btn_with_stroke" android:visibility="gone" android:layout_width="@dimen/plugin_3g_tip_button_width_continue" android:layout_height="@dimen/plugin_3g_tip_button_height" android:layout_marginTop="@dimen/plugin_small_3g_tip_text_margin_bottom" android:text="@string/plugin_3g_tip_btn_continue" android:layout_below="@id/plugin_3g_tip_bottom" android:layout_centerHorizontal="true" />
