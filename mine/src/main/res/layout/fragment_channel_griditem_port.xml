<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="#ffffffff" android:layout_width="@dimen/gridview_item_width_port" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:background="#fff5f5f5" android:padding="1.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:layout_width="@dimen/icon_not_loaded_width" android:layout_height="@dimen/icon_not_loaded_height" android:src="@drawable/channel_not_loaded_icon_play" />
        <com.youku.widget.YoukuPortImageView android:id="@id/channel_griditem_port" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" />
        <TextView android:gravity="center_vertical" android:layout_gravity="bottom" android:id="@id/stripe_middle_tv" android:background="#7a000000" android:paddingLeft="@dimen/stripe_bottom_tv_port_marginLeft" android:layout_width="fill_parent" android:layout_height="@dimen/grid_item_stripe_middle_height" style="@style/homepage_item_middle_stripe" />
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/channel_griditem_tv_port" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="@dimen/gridview_item_tv_height_port">
        <TextView android:ellipsize="end" android:id="@id/channel_griditem_title_port" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/stripe_bottom_tv_port_marginLeft" android:layout_marginTop="@dimen/stripe_bottom_tv_port_marginTop" android:singleLine="true" android:layout_alignParentBottom="true" style="@style/homepage_item_title_first" />
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/stripe_bottom_tv_port_marginLeft">
            <TextView android:id="@id/stripe_bottom_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" style="@style/homepage_item_title_second" />
            <TextView android:gravity="center_vertical" android:id="@id/stripe_bottom_rating" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLength="3" style="@style/homepage_item_title_second" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:id="@id/channel_griditem_port_shadow" android:background="#ffcccccc" android:layout_width="fill_parent" android:layout_height="@dimen/shadow_height" />
</LinearLayout>