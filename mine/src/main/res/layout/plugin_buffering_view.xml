<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/plugin_buffering_view_bg" android:layout_width="@dimen/plugin_buffering_view_bg_width" android:layout_height="@dimen/plugin_buffering_view_bg_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@id/buffering_progressbar_img" android:layout_width="@dimen/buffering_progressbar_width" android:layout_height="@dimen/buffering_progressbar_width" android:src="@drawable/buffering_circle" android:layout_centerHorizontal="true" />
        <TextView android:id="@id/buffering_txt_tips" android:paddingLeft="@dimen/buffering_txt_tips_paddingleftright" android:paddingRight="@dimen/buffering_txt_tips_paddingleftright" android:layout_width="wrap_content" android:layout_height="@dimen/buffering_txt_tips_height" android:text="@string/buffering_txt_tips" android:layout_below="@id/buffering_progressbar_img" android:layout_centerHorizontal="true" style="@style/buffering_txt_tips" />
        <View android:id="@id/buffering_txt_line" android:background="#80a4a4a4" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_below="@id/buffering_txt_tips" android:layout_alignLeft="@id/buffering_txt_tips" android:layout_alignRight="@id/buffering_txt_tips" android:layout_centerHorizontal="true" />
        <TextView android:id="@id/buffering_txt_speed" android:layout_width="wrap_content" android:layout_height="@dimen/buffering_txt_tips_height" android:layout_below="@id/buffering_txt_line" android:layout_centerHorizontal="true" style="@style/buffering_txt_speed" />
    </RelativeLayout>
</RelativeLayout>