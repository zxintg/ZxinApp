<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/fullscreen_setting_view_background_color" android:layout_width="@dimen/fullscreen_setting_view_width" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/setting_view_title_layout" android:layout_width="fill_parent" android:layout_height="@dimen/setting_view_title_height" android:layout_marginLeft="@dimen/setting_view_layout_marginleftright" android:layout_marginRight="@dimen/setting_view_layout_marginleftright">
        <TextView android:id="@id/setting_view_title" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/setting_view_title_marginleft" android:text="@string/settings" android:layout_alignParentLeft="true" style="@style/setting_view_title" />
        <ImageView android:id="@id/setting_view_close_btn" android:layout_width="@dimen/setting_view_close_btn_width" android:layout_height="@dimen/setting_view_close_btn_height" android:src="@drawable/setting_view_close_btn" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
    </RelativeLayout>
    <View android:id="@id/setting_view_title_line" android:background="@color/setting_view_title_line_color" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_marginLeft="@dimen/setting_view_layout_marginleftright" android:layout_marginRight="@dimen/setting_view_layout_marginleftright" android:layout_below="@id/setting_view_title_layout" />
    <RelativeLayout android:id="@id/setting_view_layout" android:layout_width="fill_parent" android:layout_height="@dimen/setting_view_layout_height" android:layout_below="@id/setting_view_title_line">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_view_layout_marginleftright" android:layout_marginRight="@dimen/setting_view_layout_marginleftright" android:layout_centerVertical="true">
            <LinearLayout android:gravity="center|left" android:orientation="horizontal" android:id="@id/setting_view_layout_item_bright" android:layout_width="fill_parent" android:layout_height="@dimen/setting_view_layout_item_height" android:layout_marginLeft="@dimen/setting_view_layout_item_marginleftright" android:layout_marginRight="@dimen/setting_view_layout_item_marginleftright">
                <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/setting_canvas_btn_spacing" android:text="@string/setting_bright_tips" style="@style/setting_view_layout_item_tips" />
                <SeekBar android:id="@id/setting_view_bright_seekbar" android:layout_width="fill_parent" android:layout_height="wrap_content" android:progressDrawable="@drawable/player_setting_bright_progressbar" android:thumb="@drawable/player_settings_bright_thumb" />
            </LinearLayout>
            <LinearLayout android:gravity="center|left" android:orientation="horizontal" android:id="@id/setting_view_layout_item_canvas" android:layout_width="fill_parent" android:layout_height="@dimen/setting_view_layout_item_height" android:layout_marginLeft="@dimen/setting_view_layout_item_marginleftright" android:layout_marginRight="@dimen/setting_view_layout_item_marginleftright">
                <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/setting_canvas_btn_spacing" android:text="@string/setting_canvas_tips" style="@style/setting_view_layout_item_tips" />
                <RadioGroup android:gravity="center|left" android:orientation="horizontal" android:id="@id/setting_canvas_radiogroup" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <View android:layout_width="@dimen/setting_canvas_btn_spacing" android:layout_height="fill_parent" />
                    <RadioButton android:gravity="center|left" android:id="@id/setting_canvas_50_btn" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/setting_canvas_50" android:drawableLeft="@drawable/player_setting_radiobtn_selector" android:drawablePadding="@dimen/setting_radio_btn_drawablepadding" android:layout_weight="1.0" style="@style/setting_radio_btn" />
                    <View android:layout_width="@dimen/setting_canvas_btn_spacing" android:layout_height="fill_parent" />
                    <RadioButton android:gravity="center|left" android:id="@id/setting_canvas_75_btn" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/setting_canvas_75" android:drawableLeft="@drawable/player_setting_radiobtn_selector" android:drawablePadding="@dimen/setting_radio_btn_drawablepadding" android:layout_weight="1.0" style="@style/setting_radio_btn" />
                    <View android:layout_width="@dimen/setting_canvas_btn_spacing" android:layout_height="fill_parent" />
                    <RadioButton android:gravity="center|left" android:id="@id/setting_canvas_100_btn" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/setting_canvas_100" android:drawableLeft="@drawable/player_setting_radiobtn_selector" android:drawablePadding="@dimen/setting_radio_btn_drawablepadding" android:layout_weight="1.0" style="@style/setting_radio_btn" />
                    <View android:layout_width="@dimen/setting_canvas_btn_spacing" android:layout_height="fill_parent" />
                    <RadioButton android:gravity="center|left" android:id="@id/setting_canvas_full_btn" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/setting_canvas_full" android:drawableLeft="@drawable/player_setting_radiobtn_selector" android:drawablePadding="@dimen/setting_radio_btn_drawablepadding" android:layout_weight="1.0" style="@style/setting_radio_btn" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout android:gravity="center|left" android:orientation="horizontal" android:id="@id/setting_view_layout_item_jump" android:layout_width="fill_parent" android:layout_height="@dimen/setting_view_layout_item_height" android:layout_marginLeft="@dimen/setting_view_layout_item_marginleftright" android:layout_marginRight="@dimen/setting_view_layout_item_marginleftright">
                <CheckBox android:gravity="center" android:id="@id/setting_view_jump_chk" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/player_setting_checkbox_selector" android:text="@string/setting_view_jump_chk" style="@style/setting_view_layout_item_tips" />
            </LinearLayout>
        </LinearLayout>
        <View android:background="@color/setting_view_title_line_color" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/setting_view_bottom_layout" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/setting_view_bottom_layout_height" android:layout_below="@id/setting_view_layout">
        <TextView android:id="@id/setting_view_bottom_cancel_btn" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0" style="@style/setting_view_bottom_cancel_btn" />
        <View android:background="@color/setting_view_title_line_color" android:layout_width="1.0px" android:layout_height="fill_parent" />
        <TextView android:id="@id/setting_view_bottom_ok_btn" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0" style="@style/setting_view_bottom_ok_btn" />
    </LinearLayout>
</RelativeLayout>