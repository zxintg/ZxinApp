            <TextView android:id="@id/plugin_small_time_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/plugin_small_time_left_margintop" android:layout_marginRight="@dimen/plugin_small_time_marginleftright" android:text="00:00" android:layout_below="@id/plugin_small_time_line" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/plugin_small_time_right" />
