        <ImageView android:id="@id/plugin_small_play_control_btn" android:layout_width="@dimen/plugin_small_play_control_btn_width" android:layout_height="fill_parent" android:src="@drawable/plugin_small_play_control_play" android:layout_alignParentLeft="true" />
