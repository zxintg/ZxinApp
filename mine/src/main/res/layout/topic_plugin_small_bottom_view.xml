<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/plugin_small_bottom_view_bg" android:layout_width="fill_parent" android:layout_height="@dimen/plugin_small_bottom_view_bg_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
