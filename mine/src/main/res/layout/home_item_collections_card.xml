<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/home_collections_extend_bg" android:layout_width="fill_parent" android:layout_height="@dimen/home_card_item_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/icon_and_text" android:layout_width="@dimen/home_card_item_head_width" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
        <TextView android:textSize="@dimen/home_card_item_text_size" android:textColor="@color/collection_create_text_color" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:layout_width="@dimen/home_card_item_head_width" android:layout_height="wrap_content" android:text="播单\n推荐" android:maxLines="2" android:minLines="2" />
        <ImageView android:layout_gravity="center_horizontal" android:layout_width="@dimen/collection_item_icon_size" android:layout_height="@dimen/collection_item_icon_size" android:src="@drawable/collection_ori_icon" />
    </LinearLayout>
    <View android:id="@id/home_collections_extend_line" android:background="@color/home_collections_extend_line_color" android:layout_width="1.0px" android:layout_height="@dimen/home_card_item_height" android:layout_toRightOf="@id/icon_and_text" />
    <android.support.v7.widget.RecyclerView android:id="@id/home_collections_extend_recycler_view" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_toRightOf="@id/home_collections_extend_line" />
</RelativeLayout>