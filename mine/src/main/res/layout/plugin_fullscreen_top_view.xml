<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="top" android:background="@drawable/plugin_fullscreen_top_view_bg" android:layout_width="fill_parent" android:layout_height="@dimen/plugin_fullscreen_top_view_bg_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="@dimen/plugin_fullscreen_top_view_height">
        <LinearLayout android:gravity="center|left" android:orientation="horizontal" android:id="@id/player_back_btn_layout" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_alignParentLeft="true">
            <ImageView android:id="@id/player_back_btn_left" android:duplicateParentState="true" android:layout_width="@dimen/player_back_btn_left_width" android:layout_height="fill_parent" android:src="@drawable/player_back_btn_left" />
            <View android:id="@id/player_back_btn_line" android:background="#33ffffff" android:layout_width="1.0px" android:layout_height="@dimen/player_back_btn_line_height" />
        </LinearLayout>
        <ImageView android:id="@id/fullscreen_top_more_btn" android:layout_width="@dimen/fullscreen_top_more_btn_width" android:layout_height="@dimen/fullscreen_top_btn_height" android:src="@drawable/fullscreen_top_more_btn_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/fullscreen_top_right_layout" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_toLeftOf="@id/fullscreen_top_more_btn" android:layout_alignWithParentIfMissing="true">
            <ImageView android:id="@id/plugin_top_u_img" android:layout_width="@dimen/plugin_top_u_img_width" android:layout_height="@dimen/plugin_top_u_img_height" android:layout_marginRight="@dimen/plugin_top_time_txt_marginright" android:src="@drawable/fullscreen_top_u_btn_selector" />
            <ImageView android:id="@id/plugin_fullscreen_top_dlna_btn" android:visibility="gone" android:layout_width="@dimen/plugin_top_u_img_width" android:layout_height="@dimen/plugin_top_u_img_height" android:layout_marginRight="@dimen/plugin_top_time_txt_marginright" android:src="@drawable/plugin_small_top_dlna_btn" />
            <ImageView android:id="@id/plugin_fullscreen_top_lock_btn" android:layout_width="@dimen/plugin_top_u_img_width" android:layout_height="@dimen/plugin_top_u_img_height" android:layout_marginRight="@dimen/plugin_top_time_txt_marginright" android:src="@drawable/plugin_fullscreen_bottom_lock_btn" />
            <TextView android:id="@id/plugin_top_time_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/plugin_top_time_txt_marginright" style="@style/plugin_top_time_txt" />
            <ImageView android:id="@id/plugin_top_battery_img" android:visibility="gone" android:layout_width="@dimen/plugin_top_battery_img_width" android:layout_height="@dimen/plugin_top_battery_img_height" android:layout_marginRight="@dimen/plugin_top_time_txt_marginright" android:src="@drawable/battery1" />
            <TextView android:id="@id/fullscreen_top_definition_btn" android:background="@drawable/fullscreen_top_btn_selector" android:layout_width="@dimen/fullscreen_top_btn_width" android:layout_height="@dimen/fullscreen_top_btn_height" android:layout_marginRight="@dimen/fullscreen_top_btn_marginright" android:text="@string/fullscreen_top_definition_btn" style="@style/fullscreen_top_btn" />
            <TextView android:id="@id/fullscreen_top_series_btn" android:background="@drawable/fullscreen_top_btn_selector" android:layout_width="@dimen/fullscreen_top_btn_width" android:layout_height="@dimen/fullscreen_top_btn_height" android:layout_marginRight="@dimen/fullscreen_top_btn_marginright" android:text="@string/fullscreen_top_series_btn" style="@style/fullscreen_top_btn" />
        </LinearLayout>
        <com.youku.miniplayer.AlwaysMarqueeTextView android:id="@id/plugin_fullscreen_top_view_title" android:paddingLeft="@dimen/plugin_small_top_view_title_paddingleft" android:paddingRight="@dimen/plugin_small_top_view_title_paddingright" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_toLeftOf="@id/fullscreen_top_right_layout" android:layout_toRightOf="@id/player_back_btn_layout" android:layout_alignWithParentIfMissing="true" style="@style/plugin_small_top_view_title" />
    </RelativeLayout>
</LinearLayout>