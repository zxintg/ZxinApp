                <TextView android:textSize="@dimen/gamecenter_myouku_video_yf_text_size" android:ellipsize="end" android:gravity="center|right" android:id="@id/duration_new" android:background="#80000000" android:paddingRight="@dimen/gamecenter_homepage_item_text_margin_left" android:layout_width="fill_parent" android:layout_height="fill_parent" android:maxLines="1" android:minLines="1" android:scrollHorizontally="true" android:singleLine="true" style="@style/gamecenter_homepage_item_middle_stripe" />
            </LinearLayout>
        </RelativeLayout>
        <TextView android:textSize="@dimen/game_details_video_item_tv_title_size" android:ellipsize="end" android:id="@id/title_new" android:background="#fff7f7f7" android:paddingLeft="@dimen/gamecenter_homepage_item_text_margin_left" android:paddingTop="@dimen/game_details_video_item_tv_title_marginTop" android:paddingRight="@dimen/gamecenter_homepage_item_text_margin_left" android:layout_width="@dimen/game_details_video_width" android:layout_height="@dimen/game_details_video_title_height" android:maxLines="2" />
    </LinearLayout>
</com.youku.gamecenter.widgets.GameCardView>