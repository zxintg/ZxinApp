    <LinearLayout android:orientation="vertical" android:background="#ffdfdfdf" android:padding="1.0px" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:layout_width="@dimen/game_details_video_width" android:layout_height="@dimen/game_details_video_height">
            <ImageView android:id="@id/video_default_img" android:layout_width="@dimen/gamecenter_icon_default_width" android:layout_height="@dimen/gamecenter_icon_default_width" android:src="@drawable/gamecenter_channel_not_loaded_icon_play" android:layout_centerHorizontal="true" android:layout_centerVertical="true" />
            <ImageView android:id="@id/video_img_new" android:layout_width="@dimen/game_details_video_width" android:layout_height="@dimen/game_details_video_height" android:scaleType="centerCrop" />
            <ImageView android:id="@id/watermark_img" android:visibility="gone" android:layout_width="@dimen/gamecenter_icon_default_width" android:layout_height="@dimen/gamecenter_icon_default_width" android:src="@drawable/game_play_btn" android:layout_centerHorizontal="true" android:layout_centerVertical="true" />
