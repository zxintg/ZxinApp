        <ImageView android:id="@id/center_icon" android:layout_toRightOf="@id/center_tab" style="@style/toolbar_tab_icon" />
        <ImageView android:id="@id/right_icon" android:layout_toRightOf="@id/right_tab" style="@style/toolbar_tab_icon" />
    </RelativeLayout>
</RelativeLayout>