<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/movie_series_txt_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/soku_directright_title_margin" android:layout_marginTop="@dimen/soku_directright_title_margin" android:layout_marginRight="@dimen/soku_directright_title_margin">
            <TextView android:id="@id/movie_series_title_txt" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/soku_directright_title_right" android:singleLine="true" style="@style/txt_searchdirect_first_title" />
            <TextView android:id="@id/movie_series_reputation_txt" android:paddingTop="2.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" style="@style/txt_searchdirect_reputation" />
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/soku_directright_title_margin" android:layout_marginTop="@dimen/soku_searchdirect_play_btn_marginbottom" android:layout_marginRight="@dimen/soku_directright_title_margin">
            <TextView android:id="@id/movie_series_rename_txt" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/txt_searchdirect_second" />
            <TextView android:id="@id/movie_series_info_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/txt_searchdirect_second" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@id/layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/soku_searchdirect_play_btn_marginright" android:layout_marginRight="@dimen/soku_searchdirect_play_btn_marginleft" android:layout_below="@id/movie_series_txt_layout">
        <RelativeLayout android:id="@id/movie_series_play_btn_layout" android:background="@drawable/soku_searchdirect_play_btn" android:layout_width="@dimen/soku_searchdirect_play_btn_width" android:layout_height="@dimen/soku_searchdirect_play_btn_height" android:layout_alignParentRight="true">
            <TextView android:textSize="@dimen/txt_soku_searchdirect_play_btn_textsize" android:textColor="@color/white" android:id="@id/movie_series_play_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/soku_play" android:drawableLeft="@drawable/soku_searchdirect_play_btn_left" android:drawablePadding="@dimen/soku_directright_notice_margintop" android:layout_centerInParent="true" />
        </RelativeLayout>
        <ImageView android:gravity="center_vertical" android:id="@id/movie_series_download_btn" android:background="@drawable/soku_searchdirect_download" android:layout_width="@dimen/soku_searchdirect_play_btn_height" android:layout_height="@dimen/soku_searchdirect_play_btn_height" android:layout_marginRight="@dimen/soku_searchdirect_play_btn_marginright" android:layout_toLeftOf="@id/movie_series_play_btn_layout" android:layout_centerVertical="true" />
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/movie_series_site_layout" android:layout_width="wrap_content" android:layout_height="@dimen/soku_searchdirect_play_btn_height" android:layout_marginRight="@dimen/soku_searchdirect_play_btn_marginright" android:layout_toLeftOf="@id/movie_series_play_btn_layout" android:layout_centerVertical="true">
            <ImageView android:layout_gravity="center_vertical" android:id="@id/movie_series_site_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/img_searchdirect_other_site_marginleft" />
            <TextView android:layout_gravity="center_vertical" android:id="@id/movie_series_site_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/searchdirect_other_site_source" style="@style/soku_txt_searchdirect_other_site" />
            <ImageView android:layout_gravity="center_vertical" android:id="@id/movie_series_site_arrow" android:background="@drawable/moren_xiala" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/soku_item_marginbottom" />
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@id/bottom_line" android:background="#ffececec" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_marginTop="@dimen/soku_searchdirect_play_btn_marginright" android:layout_below="@id/layout" />
    <LinearLayout android:orientation="horizontal" android:id="@id/movie_series_episode_layout" android:background="@color/white" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/searchdirect_item_layout_bottom_height" android:weightSum="@integer/soku_searchdirect_episode_gridview_numcolumns" android:layout_below="@id/bottom_line" />
</RelativeLayout>