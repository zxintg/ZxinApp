<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/pgcdirect_item_logo_layout" android:background="#ffc3c3c3" android:layout_width="@dimen/pgc_item_logo_width" android:layout_height="@dimen/pgc_item_logo_width">
        <ImageView android:id="@id/pgcdirect_item_logo_img" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
    </FrameLayout>
    <RelativeLayout android:id="@id/pgcdirect_item_right_top_layout" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="@dimen/pgc_item_logo_width" android:layout_toRightOf="@id/pgcdirect_item_logo_layout" android:layout_alignParentTop="true">
        <RelativeLayout android:id="@id/pgcdirect_item_subscibe_layout" android:layout_width="@dimen/pgcdirect_item_subscibe_layout_width" android:layout_height="fill_parent" android:layout_alignParentRight="true">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_centerInParent="true">
                <ImageView android:id="@id/pgcdirect_item_subscibe_img" android:layout_width="@dimen/pgcdirect_item_subscibe_img_width" android:layout_height="@dimen/pgcdirect_item_subscibe_img_width" android:src="@drawable/detail_card_rss" />
                <TextView android:id="@id/pgcdirect_item_subscibe_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/pgcdirect_item_subscibe_txt_drawablepadding" android:text="@string/pgcdirect_item_subscibe_txt" style="@style/pgcdirect_item_subscibe_txt" />
            </LinearLayout>
            <View android:id="@id/pgcdirect_item_subscibe_line" android:background="#ffe5e5e5" android:layout_width="1.0px" android:layout_height="@dimen/pgcdirect_item_subscibe_line_height" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/pgcdirect_item_title_layout" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_toLeftOf="@id/pgcdirect_item_subscibe_layout">
            <LinearLayout android:gravity="center|left" android:orientation="vertical" android:paddingLeft="@dimen/pgcdirect_item_right_layout_paddingleft" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <LinearLayout android:gravity="center|left" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/pgcdirect_item_title_first_height">
                    <TextView android:ellipsize="end" android:id="@id/pgcdirect_item_title_first" android:layout_width="wrap_content" android:layout_height="fill_parent" android:singleLine="true" style="@style/pgcdirect_item_title_first" />
                    <ImageView android:id="@id/pgcdirect_item_title_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/person_info_identification" />
                </LinearLayout>
                <TextView android:ellipsize="end" android:id="@id/pgcdirect_item_title_second" android:layout_width="wrap_content" android:layout_height="@dimen/pgcdirect_item_title_second_height" android:text="@string/pgc_item_title_second" android:singleLine="true" style="@style/pgcdirect_item_title_second" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>