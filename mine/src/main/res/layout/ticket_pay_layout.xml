<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="@dimen/pay_card_layout_width" android:layout_height="@dimen/pay_card_layout_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:id="@id/layout_ticket_pay_dialog_bottom" android:layout_width="fill_parent" android:layout_height="@dimen/layout_vip_dialog_bottom_height" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <LinearLayout android:gravity="center" android:id="@id/layout_ticket_pay_dialog_cancel" android:background="@drawable/btn_vip_dialog_cancel" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
                    <TextView android:id="@id/ticket_pay_dialog_txt_cancel" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/vip_dialog_txt_cancel" style="@style/vip_dialog_txt_cancel" />
                </LinearLayout>
                <View android:background="#2c5e5e5e" android:layout_width="1.0px" android:layout_height="fill_parent" />
                <View android:background="#ffffffff" android:layout_width="1.0px" android:layout_height="fill_parent" />
                <LinearLayout android:gravity="center" android:id="@id/layout_ticket_pay_dialog_use" android:background="@drawable/btn_vip_dialog_gopay" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
                    <TextView android:id="@id/ticket_pay_dialog_txt_use" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/vip_dialog_txt_use" style="@style/vip_dialog_txt_gopay" />
                </LinearLayout>
            </LinearLayout>
            <View android:background="@drawable/soku_layout_bottom_cover" android:layout_width="fill_parent" android:layout_height="5.0px" android:layout_alignParentTop="true" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/layout_ticket_pay_dialog_body" android:paddingLeft="@dimen/layout_ticket_pay_dialog_body_paddingleft" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/layout_ticket_pay_dialog_bottom">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <LinearLayout android:orientation="horizontal" android:id="@id/layout_ticket_pay_dialog_one" android:layout_width="fill_parent" android:layout_height="@dimen/layout_ticket_pay_dialog_one_height">
                    <TextView android:id="@id/txt_ticket_pay_dialog_account_tips" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/ticket_pay_dialog_account" style="@style/txt_ticket_pay_dialog_account" />
                    <TextView android:id="@id/txt_ticket_pay_dialog_account" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/txt_ticket_pay_dialog_account" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@id/layout_ticket_pay_dialog_two" android:layout_width="fill_parent" android:layout_height="@dimen/layout_ticket_pay_dialog_one_height">
                    <TextView android:id="@id/txt_ticket_pay_dialog_name_tips" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/ticket_pay_dialog_name" style="@style/txt_ticket_pay_dialog_account" />
                    <TextView android:id="@id/txt_ticket_pay_dialog_name" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/txt_ticket_pay_dialog_account" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@id/layout_ticket_pay_dialog_three" android:layout_width="fill_parent" android:layout_height="@dimen/layout_ticket_pay_dialog_one_height">
                    <TextView android:id="@id/txt_ticket_pay_dialog_count_tips" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/ticket_pay_dialog_count" style="@style/txt_ticket_pay_dialog_account" />
                    <TextView android:textStyle="bold" android:id="@id/txt_ticket_pay_dialog_count" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/ticket_pay_dialog_count_one" style="@style/txt_ticket_pay_dialog_account" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@id/layout_ticket_pay_dialog_four" android:layout_width="fill_parent" android:layout_height="@dimen/layout_ticket_pay_dialog_one_height">
                    <TextView android:id="@id/txt_ticket_pay_dialog_date_tips" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/ticket_pay_dialog_date" style="@style/txt_ticket_pay_dialog_account" />
                    <TextView android:id="@id/txt_ticket_pay_dialog_date" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/ticket_pay_dialog_date_48" style="@style/txt_ticket_pay_dialog_account" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>